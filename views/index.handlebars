<div class="container">

  <h1>Jim's Burger Shack!</h1>

  <div class="row">
    <img src="/assets/img/burger.png">
  </div>

  <div class="row">
    <div class="column">
      <h3>To-Go</h3>
      <ol>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          <span class="btn-group">
            {{burger_name}}
            <button class="devourBtn" data-id="{{id}}" data-isEaten="{{devoured}}">Devour it</button>
          </span>
        </li>
        {{/unless}}
        {{/each}}
      </ol>

    </div>
    <div class="column">
      <h3>Gone</h3>
      <ol id="devouredBurger">
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>


  <form class="create-form">

    <div class="form-group">
      <input type="text" id="inputBox" name="name">
    </div>


    <button type="submit" id="orderBtn">Order</button>
    <p>
      <label for="inputBox">You want it, you got it! Create your own burger here.</label>
    </p>
  </form>
</div>